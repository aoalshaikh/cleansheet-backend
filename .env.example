# Application
APP_NAME=CleanSheet
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=cleansheet
DB_USERNAME=postgres
DB_PASSWORD=

# Cache & Session
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# JWT
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_BLACKLIST_ENABLED=true

# Activity Log
ACTIVITY_LOGGER_ENABLED=true
ACTIVITY_LOG_DB_CONNECTION=pgsql
ACTIVITY_LOG_QUEUE_CONNECTION=sync

# Tenancy Configuration
TENANT_ENFORCE_DOMAINS=true
TENANT_DOMAIN_FORMAT="{tenant}.example.com"
TENANT_FORCE_SSL=true

TENANT_DB_PREFIX=""
TENANT_DB_SUFFIX=""
TENANT_SEPARATE_CONNECTIONS=false

TENANT_CACHE_PREFIX="tenant_"
TENANT_CACHE_TTL=3600
TENANT_SEPARATE_CACHE_STORES=false

TENANT_STORAGE_PREFIX="tenant_"
TENANT_SEPARATE_STORAGE_DISKS=false
TENANT_STORAGE_URL=null

TENANT_QUEUE_PREFIX="tenant_"
TENANT_SEPARATE_QUEUE_CONNECTIONS=false

TENANT_ACTIVITY_LOG_ENABLED=true
TENANT_SEPARATE_ACTIVITY_LOGS=false
TENANT_ACTIVITY_LOG_CLEAN_DAYS=90

TENANT_MIDDLEWARE_INJECT_BINDINGS=true
TENANT_MIDDLEWARE_OVERRIDE_CONFIG=true
TENANT_MIDDLEWARE_ABORT_NO_TENANT=true

TENANT_HEADER_NAME="X-Tenant-ID"
TENANT_QUERY_PARAM="tenant"
TENANT_DOMAIN_COLUMN="domains"

# Feature Flags
TENANT_FEATURE_API_ACCESS=true
TENANT_FEATURE_FILE_UPLOADS=true
TENANT_FEATURE_ACTIVITY_LOGGING=true
TENANT_FEATURE_BACKGROUND_JOBS=true
TENANT_FEATURE_EMAIL_NOTIFICATIONS=true
TENANT_FEATURE_PUSH_NOTIFICATIONS=true

# SMS Service
SMS_PROVIDER_URL=
SMS_API_KEY=
SMS_SENDER_ID=
SMS_TIMEOUT=30

# S3 Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Pusher
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
